<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity EmployeeSkill.
    -->
    <changeSet id="20201106142429-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="employee_id"
                                 baseTableName="employee_skill"
                                 constraintName="fk_employee_skill_employee_id"
                                 referencedColumnNames="id"
                                 referencedTableName="employee"/>

        <addForeignKeyConstraint baseColumnNames="skill_id"
                                 baseTableName="employee_skill"
                                 constraintName="fk_employee_skill_skill_id"
                                 referencedColumnNames="id"
                                 referencedTableName="skill"/>

        <addForeignKeyConstraint baseColumnNames="skill_level_id"
                                 baseTableName="employee_skill"
                                 constraintName="fk_employee_skill_skill_level_id"
                                 referencedColumnNames="id"
                                 referencedTableName="skill_level"/>

    </changeSet>
</databaseChangeLog>
